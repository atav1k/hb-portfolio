doctype
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{ site_title }
    link(href='https://fonts.googleapis.com/css?family=Eczar:800|Space+Mono' rel='stylesheet' type='text/css')
    link(rel="stylesheet", href="/assets/less/toolkit-portfolio.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css")    
    link(rel="alternate", type="application/rss+xml", title="#{ site_title } RSS", href="/rss.xml")
  body(class="page-#{ current.path[0] } #{ current.path.join('-') }")
    != partial("_partials/nav")
    != yield
    != partial("_partials/footer")

    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
    script(src="/assets/js/toolkit.min.js")
    script(src="/assets/js/main.js")
